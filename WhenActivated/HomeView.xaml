<UserControl x:Class="WhenActivated.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:me="clr-namespace:WhenActivated"
             mc:Ignorable="d" 
						 d:DataContext="{d:DesignInstance me:HomeViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
	<StackPanel>
		<TextBlock Text="Home View" FontSize="48" TextAlignment="Center" />
		<Button Width="75" Padding="5,3" Margin="5,0" HorizontalAlignment="Left" Content="Go forward" Command="{Binding GoForward}" />
	</StackPanel>
</UserControl>
